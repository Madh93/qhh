<div class="container">
  <div class="row">
    <div class="col-sm-8 " id="logout">
      <div class="comment-tabs">
        <ul class="nav nav-tabs" role="tablist">
          <li class="active"><a role="tab" data-toggle="tab"><h2 style="color:#333">Comentarios</h2></a></li>
        </ul>            
        <div class="tab-content">
          <div class="tab-pane active">                
            <ul class="media-list">
              <% aleatorio = rand(1..7) %>
              <% for i in 1..aleatorio do %>
                <li class="media">
                  <div class="media-body">
                    <div class="well well-lg">
                      <h4 class="media-heading text-uppercase reviews"><%= @nombres.sample %></h4>
                      <ul class="media-date text-uppercase reviews list-inline">
                        <li class="dd"><%=Time.now.strftime("%d").to_i - (aleatorio-i) %></li>
                        <li class="mm">01</li>
                        <li class="aaaa">2015</li>
                      </ul>
                      <% if @sitio.category == 3 %>
                        <p class="media-comment" style="color:#333"><%= @com_peliculas.sample %></p>
                      <% else %>
                        <p class="media-comment" style="color:#333"><%= @com_sitios.sample %></p>
                      <% end %>  
                      <div class="votos">
                        <p class="voto">+<%= rand(1..6) %></p>
                        <%= image_tag("sitios/votos.png") %>
                      </div>
                    </div>              
                  </div>
                </li>   
              <% end %>                
            </ul> 
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

