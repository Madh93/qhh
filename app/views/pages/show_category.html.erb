<% title(@category.name) %>

<!-- Page Content -->

<!-- Jumbotron Header -->
<header class="fondo jumbotron" style="margin-top:80px;background: url(<%= asset_path @path_header %>) center center no-repeat scroll;">
  <h1 style="font-family: Gill Sans, sans-serif"><%= @description[@category.id-1][0] %></h1>
  <p style="font-family: Gill Sans, sans-serif"><%= @description[@category.id-1][1] %></p>
</header>

<!-- Breadcrumbs -->
<div id="bc1" class="btn-group btn-breadcrumb">
    <%= link_to root_path, class: "btn btn-default" do %>
      <i class="fa fa-home"></i>
    <% end %>
    <%= link_to "Encuentra", encuentra_path, class: "btn btn-default" %>
    <%= link_to @category.name, categoria_path(@category.id), class: "btn btn-default" %>
</div>

<hr>

<!-- Page Features -->
<div class="row text-center" style="margin-bottom:80px;">

  <% @site.each do |s| %>

  <div class="col-md-3 col-sm-6 hero-feature">
    <div class="thumbnail" style="background-color: #8F9497">
      <%= image_tag("sitios/#{s.id}/mostrar.jpg") %>
      <div class="caption">
        <h3 style="font-family: Gill Sans, sans-serif; color: white;font-size: 2rem"><%= s.name %></h3>
        <p>
          <%= link_to "Ir al sitio", sitio_path(s.id), class: "btn btn-info" %>
        </p>
      </div>
    </div>
  </div>
  <% end %>

</div>

<br></br>